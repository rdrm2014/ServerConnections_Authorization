extends ../../layout-home

block content
    .container
        .row
            .col-md-12
                ol.breadcrumb
                    li
                        a(href="/home") Home
                    li.active Token
                a(href="/api/tokens/addtoken")
                    button.btn.btn-default.btn-lg
                        | Add Token
        hr
        .row
            .col-md-12
                if (accessTokens)
                    table(class="table table-nonfluid")
                        tr
                    td
                        b Service Name
                    td
                        b Name Setup
                    td
        .row
            .col-md-12
                if (accessTokens)
                    table(class="table table-nonfluid")
                        tr
                            td
                                b Service Name
                            td
                                b Name Setup
                            td
                                b Token
                        each accessToken in accessTokens
                            tr
                                td #{accessToken.serviceId.name}
                                td #{accessToken.nameSetup}
                                td #{accessToken.token}
                                td #{accessToken.priceStrategy}