extends ../../layout-home

block content
    .container
        .row
            .col-md-12
                ol.breadcrumb
                    li
                        a(href="/home") Home
                    li.active Services
                a(href="/api/services/addservice")
                    button.btn.btn-default.btn-lg
                        | Add Services
        hr
        .row
            .col-md-12
                table(class="table table-nonfluid")
                    tr
                        td
                            b Name
                        td
                            b serviceSecret
                        td
                            b urlCallback
                        td
                            b priceStrategy
                    each service in services
                        tr
                            //form(action="/api/oauth/token" method="post" id="service#{service.name}")
                            td #{service.name}
                            td #{service.serviceSecret}
                            td #{service.urlCallback}
                            td
                                if service.priceStrategy
                                    input(type="hidden" name="serviceId" value=service._id)
                                    .btn-group(data-toggle='buttons')
                                        each strategy in service.priceStrategy
                                            label.btn.btn-primary.disabled
                                                input(type='checkbox', autocomplete='off', name='strategy' value=strategy)
                                                | #{strategy}