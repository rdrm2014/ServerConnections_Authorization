                            i.ion-email
                        | &nbsp;&nbsp;&nbsp;
                        a(href="https://www.facebook.com/ricardomendex").btn-white
                            i.ion-social-facebook
                        | &nbsp;&nbsp;&nbsp;
                        a(href="https://www.linkedin.com/profile/view?id=241021409").btn-white
                            i.ion-social-linkedin
                        | &nbsp;&nbsp;&nbsp;
                        a(href="https://github.com/rdrm2014").btn-white
                            i.ion-social-github
                        a(href='http://www.ua.pt').btn-white
